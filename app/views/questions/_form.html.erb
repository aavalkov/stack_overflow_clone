<div id = 'errors'>
  <%= render('layouts/errors', :object => @question) %>
</div>
<%= form_for(@question) do |f| %>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control" %>
      <%= f.label :description %>
      <%= f.text_area :description, :rows => "4", :class => "form-control" %>
    </div>
  <%= f.submit(:class => "btn btn-primary") %>
  </div>
<% end %>
